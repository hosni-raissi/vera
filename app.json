{
  "expo": {
    "name": "Vera",
    "slug": "vera-life-assistant",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTabletMode": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Allow Vera to access your microphone for voice recording",
        "NSLocationWhenInUseUsageDescription": "Allow Vera to access your location to track your current position"
      },
      "config": {
        "googleMapsApiKey": "AIzaSyB2t4hOvy4D0fX0nb8T_By3xp4ibdkjWTQ"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      },
      "permissions": [
        "RECORD_AUDIO",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyB2t4hOvy4D0fX0nb8T_By3xp4ibdkjWTQ"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Vera to access your photos",
          "cameraPermission": "Allow Vera to access your camera"
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow Vera to access your microphone for voice recording"
        }
      ]
    ]
  }
}
